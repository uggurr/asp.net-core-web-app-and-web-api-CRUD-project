@{
    ViewData["Title"] = "Personel";
}

<h1 class="mb-5">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-12 col-sm-6 col-lg-8 order-last order-sm-first">
        <form id="employeeForm">
            <div class="form-group row mb-5">
                <label for="ad" class="col-sm-2 col-form-label"><p class="text-sm-end">Ad:</p></label>
                <div class="col-sm-10 container-fluid">
                    <input type="text" class="form-control" name="ad" id="ad">
                </div>
            </div>
            <div class="form-group row mb-5">
                <label for="soyad" class="col-sm-2 col-form-label"><p class="text-sm-end">Soyad:</p></label>
                <div class="col-sm-10 container-fluid">
                    <input type="text" class="form-control" id="soyad">
                </div>
            </div>
            <div class="form-group row mb-5">
                <label for="birthday" class="col-sm-2 col-form-label"><p class="text-sm-end">D.Tarihi:</p></label>
                <div class="col-sm-10 container-fluid">
                    <input type="date" class="form-control" id="birthday">
                </div>
            </div>
            <div class="mb-5 d-flex justify-content-center">
                <div class="form-check form-check-inline mx-4">
                    <input class="form-check-input" type="radio" name="Options" id="gender" value="K">
                    <label class="form-check-label">Kadın</label>
                </div>
                <div class="form-check form-check-inline mx-4">
                    <input class="form-check-input" type="radio" name="Options" id="gender" value="E">
                    <label class="form-check-label">Erkek</label>
                </div>
                <div class="form-check form-check-inline mx-4">
                    <input class="form-check-input" type="radio" name="Options" id="gender" value="B">
                    <label class="form-check-label">Belirtmek İstemiyorum</label>
                </div>
            </div>
            <div class="form-group row mb-5">
                <label for="ulke" class="col-sm-2 col-form-label"><p class="text-sm-end">Ülke:</p></label>
                <div class="col-sm-10 container-fluid">
                    <select class="form-control" id="ulke">
                    </select>
                </div>
            </div>
            <div class="form-group row mb-5">
                <label for="sehir" class="col-sm-2 col-form-label"><p class="text-sm-end">Şehir:</p></label>
                <div class="col-sm-10 container-fluid">
                    <select class="form-control" id="sehir">
                    </select>
                </div>
            </div>
            <div id="okulAlan_1" class="form-group row mb-5 form-school">
                <div class="col-11 mb-4 border rounded">
                    <div class="row mb-4 mt-2">
                        <div class="col-sm-6">
                            <label for="okul" class="col-sm-12 col-form-label"><p class="text-sm-center">Mezun Olduğunuz Okul</p></label>
                            <div class="col-sm-12 container-fluid">
                                <select class="form-control" id="okul_1">
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label for="mezuniyet" class="col-sm-12 col-form-label"><p class="text-sm-center">Mezuniyet Yılı</p></label>
                            <div class="col-sm-12 container-fluid">
                                <input type="text" class="form-control" id="mezuniyet_1">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-1">
                    <button type="button" class="btn btn-success btn-sm mb-2" onclick="cloneForm('okulAlan_1')">+</button>
                    <button type="button" id="btn_1" class="btn btn-danger btn-sm" onclick="deleteForm('okulAlan_1')" style="display: none;">x</button>

                </div>
            </div>
            <div class="form-group row mb-5">
                <label for="aciklama" class="col-sm-2 col-form-label"><p class="text-sm-end">Açıklama:</p></label>
                <div class="col-sm-10 container-fluid">
                    <textarea class="form-control" id="aciklama" rows="3"></textarea>
                </div>
            </div>
        </form>
        <div class="d-flex justify-content-end">
            <input class="btn btn-primary" type="submit" value="Kaydet" id="addEmployee" onclick="kaydet()">
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-4 order-first order-sm-last mb-5 mb-sm-0">
        <form id="EmployeePhoto">
            <div class="form-group">
                <div id="previewArea" class="mb-4">
                    @* <img id="previewImage" src="" alt="Fotoğraf Önizleme" style="display: none;"> *@
                    <div id="defaultText">
                        <p>Fotoğraf Yüklemek İçin Dosyayı Seçin</p>
                        
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <input type="file" class="form-control-file" id="photoUpload" style="display: none;">
                    <input type="button" class="btn btn-secondary" value="fotoğraf yükle" onclick="document.getElementById('photoUpload').click();" />
                </div>
            </div>

        </form>
    </div>
</div>

@* <script src="~/js/uploadphoto.js"></script> *@
<script src="~/js/Dropdowns.js" asp-append-version="true"></script>
<script src="~/js/school.js" asp-append-version="true"></script>
<script src="~/js/Personel.js" asp-append-version="true"></script>


